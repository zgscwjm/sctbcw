function DeptInfo(){
}
DeptInfo.prototype={
		addIndex:function(path){
			window.location.href=path+"/DeptInfo/addDeptInfoIndex";
		},
		editIndex:function(id,path){
			window.location.href=path+"/DeptInfo/editDeptInfoIndex?id="+id;
		},
		add:function(path){
			$.ajax({
                cache: true,
                type: "post",
                url:path+"/DeptInfo/addDeptInfo",
                data:$('#add_form').serialize(),
                async: false,
                error: function(request) {
                    alert("Connection error");
                },
                success: function(data) {
                    if(data){
                    	alert("操作成功！页面将自动跳转…………");
                    	setTimeout(function(){window.location.href=path+"/DeptInfo/getDeptInfoAll"}, "1000");
                    }
                    else{
                    	alert("操作失败！");
                    }
                }
            });
		},
		edit:function(path){
			$.ajax({
                cache: true,
                type: "post",
                url:path+"/DeptInfo/editDeptInfo",
                data:$('#edit_form').serialize(),
                async: false,
                error: function(request) {
                    alert("Connection error");
                },
                success: function(data) {
                    if(data){
                    	alert("操作成功！页面将自动跳转…………");
                    	setTimeout(function(){window.location.href=path+"/DeptInfo/getDeptInfoAll"}, "1000");
                    }
                    else{
                    	alert("操作失败！");
                    }
                }
            });
		},
		del:function(id,path){
			$.ajax({
				type:"get",
			url:path+"/DeptInfo/delDeptInfo",
			data:{id:id},
            error: function(request) {
                alert("Connection error");
            },
            success: function(data) {
                if(data){
                	alert("操作成功！页面将自动跳转…………");
                	setTimeout(function(){window.location.href=path+"/DeptInfo/getDeptInfoAll"}, "1000");
                }
                else{
                	alert("操作失败！");
                }
            }
			});
		},
		list:function(page,path){
			window.location.href=path+"/DeptInfo/getDeptInfoAll?page="+page;
		}
}